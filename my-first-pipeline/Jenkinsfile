pipeline {
    agent {
        docker {
            image 'openjdk:17'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // Mount Docker socket
        }
    }
    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git branch: 'main', url: 'https://github.com/RahmanMomin/Jenkins-Zero-To-Hero.git'
            }
        }
    }
    post {
        always {
            dir('my-first-pipeline') {
                // Define directory context for all following stages
                stage('Debug') {
                    steps {
                        sh 'ls -al' // Debugging
                    }
                }
                stage('Compile') {
                    steps {
                        sh 'javac App.java'
                    }
                }
                stage('Run') {
                    steps {
                        sh 'java App'
                    }
                }
            }
        }
    }
}
